{
  "manifest_version": 3,
  "name": "URL Collector and sharer",
  "version": "1.3.1",
  "description": "Collect & share links instantly. Auto-capture URLs, export to JSON/CSV/TXT, bulk open tabs. For research & productivity.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "favicon"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}