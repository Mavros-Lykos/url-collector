{
  "manifest_version": 3,
  "name": "URL Collector",
  "version": "1.0",
  "description": "Collect, manage, and share URLs from your browsing sessions.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "downloads" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
